@model CinemaApp.Models.CinemaRoom

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Cinema Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomNr)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNr)
        </dd>
        <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Seats)
        </dt>
        <dd class="col-sm-10"></dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <td>ID</td>
                <td>Row</td>
                <td>Nr</td>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model.Seats)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ID)</td>
                <td>@Html.DisplayFor(modelItem => item.Row)</td>
                <td>@Html.DisplayFor(modelItem => item.Nr)</td>
            </tr>
}
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>