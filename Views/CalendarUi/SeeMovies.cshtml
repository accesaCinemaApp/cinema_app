@model CinemaApp.Models.Movie


<!DOCTYPE html>
<html>
<head>

</head>
<body>
    <div class="header">
        <p>Pick a movie for booking!</p>
        <input type='button' value=@Model.Title id='redirect' onclick="location.href = '@Url.Action("SendMail", "CalendarUi")'" />

        <div id="movieProperties">
            <p>@Model.Description</p>
